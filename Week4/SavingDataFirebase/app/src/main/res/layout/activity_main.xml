<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.savingdatafirebase.view.mainactivity.MainActivity">
<Button
    android:text="Push a movie"
    android:onClick="updateFirebaseDb"
    android:id="@+id/btnPushMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <Button
        android:text="Get Movies"
        android:onClick="updateFirebaseDb"
        android:id="@+id/btnGetMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
